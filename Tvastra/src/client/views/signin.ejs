 <section>
    <div class="signin-form">
        <h2>Login</h2>
        <hr>
        <!-- Messages to flash  -->
             <%- include("./partials/messages")  %>
        <!-- Messages to flash  -->
        <form action="SignIn" method="POST">
            <input type="email" class="Email" name="email" placeholder="Enter Your Email" value="<%= typeof email != 'undefined' ? email : '' %>" >
            <div class="password-div">
                <input type="password" id="password" class="password" name="password" placeholder="Enter Password"  value="<%= typeof password != 'undefined' ? password : '' %>" required>
                <i onclick="showpass()" id="password-eye" class="far fa-eye-slash"></i>
            </div>
            <button class="signin-button" type="submit">LOG IN</button>
        </form>
        <div class="form-footer">
            <h6>Not Registered?</h6>
            <a href="SignUp">Sign Up</a>
        </div>
    </div>
    <p class="login-footer">All Rights Reserved. &#169; tvastra 2021</p>
